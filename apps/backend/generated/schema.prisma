datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  id    String  @id @default(cuid())
  name  String
  email String? @unique
  phone String?
}

model Service {
  id          String  @id @default(cuid())
  name        String
  durationMin Int
  price       Decimal
}

model Appointment {
  id         String   @id @default(cuid())
  customerId String
  staffId    String
  serviceId  String
  start      DateTime
  status     String   @default("booked")

  @@index([customerId])
  @@index([staffId])
  @@index([start])
}
