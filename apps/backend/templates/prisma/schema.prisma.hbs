datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

{{#each entities}}
model {{pascal name}} {
{{#each fields}}
  {{name}} {{type}}{{#unless required}}?{{/unless}}{{#if isId}} @id @default(cuid()){{/if}}{{#if unique}} @unique{{/if}}
{{/each}}
{{#each indexes}}
  @@index([{{this}}])
{{/each}}
}

{{/each}}

